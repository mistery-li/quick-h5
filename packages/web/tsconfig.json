{
  "extends": "../../tsconfig.settting.json",
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true
  },
  "include": [
    "packages/web/src/**/*.ts",
    "packages/web/src/**/*.d.ts",
    "packages/web/src/**/*.tsx",
    "packages/web/src/**/*.vue"
  ]
}
